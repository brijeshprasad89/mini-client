{
  "name": "mini-client",
  "version": "4.2.0",
  "description": "Mini client for mini services: Micro services done simply",
  "author": "feugy <damien.feugas@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/feugy/mini-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/feugy/mini-client"
  },
  "main": "./lib",
  "scripts": {
    "doc": "docma",
    "doc:serve": "docma serve",
    "doc:watch": "chokidar . -c \"npm run doc\" -i .git -i coverage -i docs -i node_modules & npm run doc:serve",
    "lint": "eslint . --fix",
    "nsp": "nsp check",
    "prepush": "npm run nsp & npm test",
    "submit-coverage": "cat coverage/lcov.info | coveralls -v",
    "test": "lab test",
    "update-deps": "next-update -k true --tldr"
  },
  "dependencies": {
    "bunyan": "~2.0.2",
    "boom": "~7.2.0",
    "crc32": "~0.2.2",
    "got": "~8.3.0",
    "joi": "~13.2.0",
    "mini-service-utils": "~3.0.1"
  },
  "devDependencies": {
    "bl": "~1.2.2",
    "chokidar-cli": "~1.2.0",
    "coveralls": "~3.0.0",
    "docma": "~2.1.0",
    "eslint": "~4.19.1",
    "eslint-config-standard": "~11.0.0",
    "eslint-plugin-import": "~2.11.0",
    "eslint-plugin-node": "~6.0.1",
    "eslint-plugin-promise": "~3.7.0",
    "eslint-plugin-standard": "~3.0.1",
    "hapi": "~17.3.1",
    "husky": "~0.14.3",
    "lab": "~15.4.1",
    "lab-espower-transformer": "~2.0.1",
    "moment": "~2.22.1",
    "multistream": "~2.1.0",
    "next-update": "~3.6.0",
    "nsp": "~3.2.1",
    "power-assert": "~1.5.0"
  }
}
